{
  "name" : "openam-general",
  "baseURI" : "http://openam.amazonaws.com:8080",
  "condition" : "${matches(request.uri.path, '^(/UI|/XUI|/oauth2|/json|/openam7)')}",
  "capture" : [ "response", "request" ],
  "handler" : {
    "type" : "ReverseProxyHandler",
    "config" : {
      "connectionTimeout" : "60 seconds",
      "soTimeout" : "unlimited"
    }
  }
}